<%- include('partials/header.ejs') %>
<section id="account">
  <div class="account-left ">
    <div class="profile d-flex bg-white p-2 gap-3 align-items-center" >
        <img src="../images/uploads/<%=user.photo%>" alt="" style="height: 50px; width: 50px; border-radius: 50%;">
        <div style=" overflow: hidden;">
            <h6><%=user.fullname%> </h6>
            <h5 style="text-overflow: ellipsis; overflow: hidden;"><%=user.username%></h5>
        </div>
    </div>

    <div class="account-head border-bottom bg-white mt-2 d-flex flex-column ">
        <h5 class="text-muted d-flex align-items-center gap-4 m-3"> <i class="fa-solid fa-user text-primary"></i> account setting</h5>
        <div class="d-flex flex-column m-0 p-0" >
            <a href="/account" class="py-2 px-5 dropdown-item text-primary" style="background: rgb(240, 251, 255); font-weight: 700;" >
                profile information
            </a>
            <a href="/address" class="p-2 px-5 dropdown-item" >
                manage address
            </a>
            <a href="/security" class="p-2 px-5 dropdown-item" >
                security & password
            </a>
        </div>
    </div>

    <div class="border-bottom bg-white p-3">
        <a href="/logout" class="d-flex align-items-center gap-4"><i class="fa-solid fa-right-from-bracket" style="font-size: 20px;"></i> <h5 class="text-muted">logout</h5></a>
    </div>

  </div>

    

  <div class="account-right  p-4">
    
    <div>
        <div  id="profile-update" title="Profile Image" style=" padding: 2px; width: 100px; height: 100px; border-radius: 50%; cursor: pointer; border: 3px solid green;">
            <img src="../images/uploads/<%=user.photo%>" alt="" style="height: 100%; width: 100%; border-radius: 50%;">
        </div>
        <form action="/updatephoto" class="file-form" method="post" enctype="multipart/form-data">
            <div class="form-group my-3">
                <input type="file"  name="filename" id="profile" style="display: none;" />
            </div>
        </form>
        <form action="/updateuser" method="post"  >
            
            <div class="form-goup d-flex flex-column gap-3">
                <label for="name">personal information</label>
               <div>
                <input type="text" name="fullname" id="" value="<%=user.fullname%>">
               </div>
            </div>
            <div class="form-goup d-flex flex-column gap-2 mt-4 ">
                <label for="name" style=" font-weight: 500; font-size: 15px;" class="text-muted" > your gender</label>
                <div class="d-flex gap-4 ">
                   <% if(user.gender){ %>

                   <% if(user.gender === "male" ){ %>
                    <div class="form-check d-flex gap-3 align-items-center">
                        <input class="form-check-input" value="male"  type="radio" name="gender" id="flexRadioDefault1" checked>
                        <label class="form-check-label" style="font-size: 15px;" for="flexRadioDefault1">
                          male
                        </label>
                    </div>
                    <div class="form-check d-flex gap-3 align-items-center">
                        <input class="form-check-input" value="female"  type="radio" name="gender" id="flexRadioDefault2">
                        <label class="form-check-label" style="font-size: 15px;" for="flexRadioDefault2">
                          female
                        </label>
                    </div>
                   <% }else{ %>
                    <div class="form-check d-flex gap-3 align-items-center">
                        <input class="form-check-input" value="male"  type="radio" name="gender" id="flexRadioDefault1">
                        <label class="form-check-label" style="font-size: 15px;" for="flexRadioDefault1">
                          male
                        </label>
                    </div>
                    <div class="form-check d-flex gap-3 align-items-center">
                        <input class="form-check-input" value="female"  type="radio" name="gender" id="flexRadioDefault2" checked>
                        <label class="form-check-label" style="font-size: 15px;" for="flexRadioDefault2">
                          female
                        </label>
                    </div>
                  <% } %>

                   <% }else{ %>
                    <div class="form-check d-flex gap-3 align-items-center">
                        <input class="form-check-input" value="male"  type="radio" name="gender" id="flexRadioDefault1">
                        <label class="form-check-label" style="font-size: 15px;" for="flexRadioDefault1">
                          male
                        </label>
                    </div>
                    <div class="form-check d-flex gap-3 align-items-center">
                        <input class="form-check-input" value="female"  type="radio" name="gender" id="flexRadioDefault2" >
                        <label class="form-check-label" style="font-size: 15px;" for="flexRadioDefault2">
                          female
                        </label>
                    </div>
                   <% } %>
                    
                </div>
            </div>
            <div class="form-goup  mt-5">
                <div class="d-flex flex-column gap-3">
                    <label for="name">username</label>
                     <input type="text" name="username" id="usernum" value="<%=user.username%>">
                </div>
                <small class="mx-3 m-0 username-suggestion" style="position: absolute; font-size: 11px;display: none;">asdf</small>

            </div>
           
            <div class="form-goup d-flex flex-column gap-3 mt-5">
                <label for="name">mobile number</label>
       
                <input type="number" placeholder="Enter mobile number" name="number" id="" value="<%=user.mobilenumber%>">
        
            </div>

            <button class="btn btn-primary mt-5">save info</button>
        </form>
    </div>
    <div class="mt-5 faqs">
        <h5 class="my-4">FAQS</h5>
        <div>
            <h6>What happens when I update my email address (or mobile number)?</h6>
            <p>Your login email id (or mobile number) changes, likewise. You'll receive all your account related communication on your updated email address (or mobile number).</p>
        </div>
        <div>
            <h6>When will my Flipkart account be updated with the new email address (or mobile number)?</h6>
            <p>It happens as soon as you confirm the verification code sent to your email (or mobile) and save the changes.</p>
        </div>
        <div>
            <h6>What happens to my existing Flipkart account when I update my email address (or mobile number)?</h6>
            <p>Updating your email address (or mobile number) doesn't invalidate your account. Your account remains fully functional. You'll continue seeing your Order history, saved information and personal details.</p>
        </div>
        <div>
            <h6>Does my Seller account get affected when I update my email address?</h6>
            <p>Flipkart has a 'single sign-on' policy. Any changes will reflect in your Seller account also.</p>
        </div>

<br>
        <!-- <a href="/delete/<%=user._id%>" >Deactivate Account</a> -->
        <button class="btn btn-danger deactivate">Deactivate Account</button>
        <input type="text" value="<%=user._id%>" id="userid" style="display: none;" >
    </div>
  </div>

</section>

<section id="feedbackform" class=" align-items-center justify-content-center" style="z-index: 9999; display: none; position: fixed; top: 0; left: 0; width: 100vw; height: 100vh; background-color: rgba(0, 0, 0, 0.507);">
    <div class="feedback px-5 py-3 border bg-white" style="border-radius: 10px;">
        <strong >If you have a moment,please let us know why are you deactivating:</strong>
        <form action="/deactivateaccount" method="post" class="d-flex flex-column mt-3 gap-1 deactivation-form">
            <div class="form-check">
                <input class="form-check-input" value="i found a better platform." type="radio" name="reasion" id="flexRadioDefault1">
                <label class="form-check-label" for="flexRadioDefault1">
                    i found a better platform.
                </label>
            </div>
            <div class="form-check">
                <input class="form-check-input" value="its not what i was looking for." type="radio" name="reasion" id="flexRadioDefault2">
                <label class="form-check-label" for="flexRadioDefault2">
                    its not what i was looking for.
                </label>
            </div>
            <div class="form-check">
                <input class="form-check-input" value="website dont work as expected" type="radio" name="reasion" id="flexRadioDefault1">
                <label class="form-check-label" for="flexRadioDefault1">
                    website dont work as expected
                </label>
            </div>
            <div class="form-check">
                <input class="form-check-input" value="temporary deavtivation" type="radio" name="reasion" id="flexRadioDefault2" >
                <label class="form-check-label" for="flexRadioDefault2">
                    its a temporary deavtivation - i am troubleshooting an issue
                </label>
            </div>
            <div class="form-check">
                <input class="form-check-input" value="other" type="radio" name="reasion" id="flexRadioDefault2" >
                <label class="form-check-label" for="flexRadioDefault2">
                    other
                </label>
            </div>
            <div class="d-flex flex-column mt-2">
                <strong>kindly tell us the reasion so we can inprove.</strong>
                <textarea name="textarea" id="" class="p-1 border bg-light" style="resize: none;" placeholder="Enter Your Feedback"></textarea>
            </div>
            <div class="otp mt-4 flex-column gap-2" style="display: none;" >
                <strong>Enter your otp</strong>
               <div class="d-flex gap-3">
                <input type="text" name="otp" class="otpinput p-1 bg-light w-50 border" placeholder="Enter otp here" maxlength="6">
                <button class="btn btn-link otpbtn" type="button"  >SEND OTP</button>
               </div>
            </div>
            <div class="mt-4 d-flex  gap-2 justify-content-end account-btn">
                <button class="btn btn-warning text-white closebtn" type="button">cencle</button>
                <button class="btn btn-info text-white nextbtn" type="button">next</button>
                <button class="btn btn-danger" type="submit" style="display: none;" >Deactivate now</button>
            </div>
        </form>
    </div>
</section>


<script>
    document.querySelector(".otpbtn").addEventListener("click",function(){
        document.querySelector(".otpbtn").textContent="Please Wait !"
        document.querySelector(".otpbtn").disabled = true
        axios.get(`/deactivate`).then(function(res){
            document.querySelector(".otpbtn").textContent="Otp Sent Successfully." ;
            var timeleft = 10;
             var downloadTimer = setInterval(function(){
            if(timeleft <= 0){
                clearInterval(downloadTimer);
                document.querySelector(".otpbtn").textContent="RESEND OTP";
                document.querySelector(".otpbtn").disabled = false;
            }else{
                document.querySelector(".otpbtn").textContent="RESEND OTP IN : " + timeleft;
            }
            timeleft -= 1;
                }, 1000);  
        })
    })

  var form = document.querySelector(".deactivation-form")
    form.addEventListener("submit",event=>{
        event.preventDefault()
        var x = document.querySelector("input[name=otp]")
        if (x.value.trim().length >= 6) {
            form.submit()
        }else{
            alert("please fill 6 digit otp")
        }
    })
    
    document.querySelector(".nextbtn").addEventListener("click",function(){
        document.querySelector("button[type=submit]").style.display="block"
        document.querySelector(".nextbtn").style.display="none"
        document.querySelector(".otp").style.display="flex"
    })
    var feedback =  document.getElementById("feedbackform")

    document.querySelector(".deactivate").addEventListener("click",function(){
        feedback.style.display="flex"
    })

    document.querySelector(".closebtn").addEventListener("click",function(){
        feedback.style.display="none"
    })

    document.getElementById("profile-update").addEventListener("click",function(){
        document.getElementById("profile").click()
    })
    document.getElementById("profile").addEventListener("change",function(){
        document.querySelector(".file-form").submit()
    })


    document.querySelector("#usernum").addEventListener("change",function(){
        axios.get(`/check/${this.value}`).then(function(res){
            var small = document.querySelector(".username-suggestion")
            if (res.data == null) {
                small.style.display="block"
                small.style.color="green";
                small.textContent = "user name available."
            }else{
                small.style.display="block"
                small.style.color="red";
                small.textContent = " user name is already taken."
            }
        })
      })
</script>
